{
  "compilerOptions": {
    "target": "es2021",                               
    "module": "commonjs",   
    "allowJs": true,                         
    "rootDir": "./src",                                                      
    "outDir": "./dist",
    "useUnknownInCatchVariables": false,    
    "sourceMap": true,   
    "removeComments": true,                       
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,               
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",      
  }
}
